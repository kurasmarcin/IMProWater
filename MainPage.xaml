<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IMProWater.MainPage"
             BackgroundColor="White">

    <Grid>
        <Image Source="tlo.jpg" Aspect="AspectFill" />

        <StackLayout Padding="30" Spacing="10"
                     VerticalOptions="Center"
                     HorizontalOptions="Center">
            <Label Text="Witamy w IMProWater" FontSize="30" HorizontalOptions="Center" TextColor="Black"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
                <Button Text="Zaloguj" Clicked="OnLoginButtonClicked" WidthRequest="100"/>
                <Button Text="Zarejestruj" Clicked="OnRegisterButtonClicked" WidthRequest="100"/>
            </StackLayout>
        </StackLayout>
    </Grid>

</ContentPage>
